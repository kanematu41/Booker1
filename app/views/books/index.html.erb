<div class="index">
<p id="notice"><%= flash[:notice] %></p>

<h2>Books</h2>

<table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr> 
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>

<td>
<%= link_to "Show", book_path(book) %>
<%= link_to "Edit", edit_book_path(book) %>
<%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: 'Are you sure' } %>
</td>
</tr>  
<% end %>
</tbody>   
</table>

<section>
<h3>New book</h3>

<%= form_for(@book) do |f| %>

<% if @book.errors %>
 <ul>
 <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
 <% end %>
 </ul>
<% end %>

<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>

<br><%= f.submit 'Create Book' %></br>

<% end %>
</section>
