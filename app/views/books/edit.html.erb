<div class="edit">
<section>
<h1>Editing Book</h1>
<%= form_for :book, url: book_path, method: :patch do |f| %>

<h4>Title</h4>
<%= f.text_field :title %><br>

<h4>Body</h4>
<%= f.text_area :body %><br>

<%= f.submit 'Update Book' %><br>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path(@book.id) %>

<% end %>
</section>
